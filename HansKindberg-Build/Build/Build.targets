<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<Import Project="..\..\Build\Package-Build.targets" />
	<PropertyGroup>
		<CreateNuGetPackageDependsOn>
			$(CreateNuGetPackageDependsOn);
			CopyHansKindbergBuildXmlTransformationContent
		</CreateNuGetPackageDependsOn>
	</PropertyGroup>
	<Target Name="CollectHansKindbergBuildXmlTransformationContent">
		<ItemGroup Condition="@(HansKindbergBuildXmlTransformationContent) == ''">
			<HansKindbergBuildXmlTransformationContent Include="$(HansKindbergBuildXmlTransformationContentDirectory)build\**\*.*" />
		</ItemGroup>
	</Target>
	<PropertyGroup>
		<CopyHansKindbergBuildXmlTransformationContentDependsOn>
			CollectHansKindbergBuildXmlTransformationContent
		</CopyHansKindbergBuildXmlTransformationContentDependsOn>
	</PropertyGroup>
	<Target Name="CopyHansKindbergBuildXmlTransformationContent" DependsOnTargets="$(CopyHansKindbergBuildXmlTransformationContentDependsOn)">
		<Copy
			DestinationFiles="@(HansKindbergBuildXmlTransformationContent->'Build\%(RecursiveDir)%(Filename)%(Extension)')"
			SourceFiles="@(HansKindbergBuildXmlTransformationContent)"
		/>
		<Message
			Importance="$(MessageImportance)"
			Text="Copying '%(HansKindbergBuildXmlTransformationContent.Identity)' to 'Build\%(HansKindbergBuildXmlTransformationContent.RecursiveDir)%(HansKindbergBuildXmlTransformationContent.Filename)%(HansKindbergBuildXmlTransformationContent.Extension)'."
		/>
	</Target>
</Project>