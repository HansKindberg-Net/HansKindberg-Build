<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<Import Project="..\..\Build\Package-Build.targets" />
	<PropertyGroup>
		<CreateNuGetPackageDependsOn>
			$(CreateNuGetPackageDependsOn);
			CopyHansKindbergBuildXmlTransformationContent
		</CreateNuGetPackageDependsOn>
	</PropertyGroup>
	<Target Name="CopyHansKindbergBuildXmlTransformationContent">
		<ItemGroup>
			<_HansKindbergBuildXmlTransformationContent Include="$(HansKindbergBuildXmlTransformationContentDirectory)build\**\*.*" />
		</ItemGroup>
		<Copy
			DestinationFiles="@(_HansKindbergBuildXmlTransformationContent->'Build\%(RecursiveDir)%(Filename)%(Extension)')"
			SourceFiles="@(_HansKindbergBuildXmlTransformationContent)"
		/>
		<Message
			Importance="$(MessageImportance)"
			Text="Copying '%(_HansKindbergBuildXmlTransformationContent.Identity)' to 'Build\%(_HansKindbergBuildXmlTransformationContent.RecursiveDir)%(_HansKindbergBuildXmlTransformationContent.Filename)%(_HansKindbergBuildXmlTransformationContent.Extension)'."
		/>
	</Target>
</Project>